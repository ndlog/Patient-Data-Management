@model QLBENHNHAN.Models.DONTHUOC

@{
    ViewBag.Title = "Chi tiết đơn thuốc";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var chiTietDonThuoc = Json.Decode(Model.CHITIETDONTHUOC);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <style>
        .vertical-navbar {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 5px;
        }

            .vertical-navbar .nav-link {
                color: #333;
                border-radius: 4px;
                transition: background-color 0.3s ease, color 0.3s ease;
            }

                .vertical-navbar .nav-link:hover {
                    background-color: #007bff;
                    color: #fff;
                }

                .vertical-navbar .nav-link .fa-solid {
                    margin-right: 8px;
                }
        .active {
            background-color: #0d6efd !important;
        }
    </style>
</head>
<body>
    <div class="container" style="min-height: 100vh;">
        <div class="row" style="margin-top: 160px;">
            <div class="col-lg-3">
                <nav class="vertical-navbar">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/home/updateinformation">
                                <i class="fa-solid fa-circle-info px-2"></i>
                                Thông tin cá nhân
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/themlichhen">
                                <i class="fa-solid fa-calendar-check px-2"></i>
                                Lịch hẹn
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/danhsachthamkham">
                                <i class="fa-solid fa-square-poll-vertical px-2"></i>
                                Kết quả khám
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/home/danhsachdonthuoc">
                                <i class="fa-solid fa-prescription-bottle-medical px-2"></i>
                                Đơn thuốc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/danhsachhoadon">
                                <i class="fa-solid fa-file-invoice px-2"></i>
                                đơn thuốc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/home/danhsachbienlai">
                                <i class="fa-solid fa-receipt px-2"></i>
                                Biên lai
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-9 shadow py-4 main-content">
                <div class="container">
                    <div class="row gutters">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-1">
                            <h1 class="h3 mb-2 ml-2 text-primary">Thông tin chi tiết Đơn Thuốc</h1>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="row gutters">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <h6 class="mb-2 text-primary">Thông tin cơ bản</h6>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group pe-none">
                                                <label class="control-label">Tên bệnh nhân:</label>
                                                <input class="form-control" readonly value="@Model.BENHNHAN.HOTEN" />
                                            </div>
                                        </div>
                                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                            <div class="form-group pe-none">
                                                <label class="control-label">Tên đơn thuốc:</label>
                                                <input class="form-control" readonly value="@Model.TENDONTHUOC" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row gutters">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <h6 class="mt-3 mb-2 text-primary">Chi tiết đơn thuốc</h6>
                                        </div>
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên dược phẩm</th>
                                                    <th>Số lượng</th>
                                                    <th>
                                                        Đơn vị
                                                    </th>
                                                    <th>
                                                        Ghi chú
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody id="selectedProductsBody">
                                                @{
                                                    int counter = 1;
                                                    foreach (var chiTiet in chiTietDonThuoc)
                                                    {
                                                        <tr>
                                                            <td>@counter</td>
                                                            <td>@chiTiet.TenThuoc</td>
                                                            <td>@chiTiet.SoLuong</td>
                                                            <td>@chiTiet.DonVi</td>
                                                            <td>@chiTiet.GhiChu</td>
                                                        </tr>
                                                        counter++;
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row gutters">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="text-right">
                                                <a href="@Url.Action("DanhSachDonThuoc")" class="btn btn-secondary">Trở lại</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
