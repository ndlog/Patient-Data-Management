@model QLBENHNHAN.Models.Validations.TaiKhoanViewModel

@{
    ViewBag.Title = "Phân quyền Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <div class="row gutters">
            <h1 class="h3 mb-2 ml-2 text-primary">Phân quyền Tài Khoản</h1>
            @using (Html.BeginForm("Authorization", "TaiKhoan", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mb-2 text-primary">Thông tin cá nhân</h6>
                                </div>
                                @Html.HiddenFor(model => model.MATK)
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group pe-none">
                                        @Html.LabelFor(model => model.USERNAME, "Username", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.USERNAME, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                                        @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <h6 class="mt-3 mb-2 text-primary">Quyền hạn</h6>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.VAITRO, "Vai trò", htmlAttributes: new { @class = "control-label" })<span class="text-danger">*</span>
                                        @Html.DropDownListFor(model => model.VAITRO, new SelectList(new List<string> { "Admin", "Doctor", "Customer" }), new { @class = "form-select" })
                                        @Html.ValidationMessageFor(model => model.VAITRO, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ACTIVE, "Active", htmlAttributes: new { @class = "control-label" })<span class="text-danger">*</span>
                                        <div class="form-check form-switch">
                                               @Html.EditorFor(model => model.ACTIVE, new { htmlAttributes = new { @class = "form-check-input", @style = "margin-left: -1.25rem;" } })
                                               @Html.ValidationMessageFor(model => model.ACTIVE, "", new { @class = "text-danger" })
                                         </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row gutters">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="text-right">
                                        <a class="btn btn-light" href="/Admin/TaiKhoan">Trở lại</a>
                                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             }
        </div>
    </div>
</body>
</html>