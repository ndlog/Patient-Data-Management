@model QLBENHNHAN.Models.CHITIETBENHAN

@{
    ViewBag.Title = "Chi tiết thông tin Bệnh Án";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <style>
        .divider {
            margin-top: 1rem;
            margin-bottom: 1rem;
            border: 0;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row gutters">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 mb-1">
                <h1 class="h3 mb-2 ml-2 text-primary">Thông tin chi tiết Bệnh Án</h1>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary">Thông tin cơ bản</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Mã bệnh án", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.MABA, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Trạng thái", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.TRANGTHAI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Tiêu đề", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.TENBENHAN, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Bệnh nhân", htmlAttributes: new { @class = "control-label" }):
                                    @Html.DropDownListFor(model => model.idBN, ViewBag.BenhNhanList as SelectList, "--Chọn bệnh nhân--", new { @class = "form-control", @readonly = true })

                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Bác sĩ", htmlAttributes: new { @class = "control-label" }):
                                    @Html.DropDownListFor(model => model.idBS, ViewBag.BacSiList as SelectList, "--Chọn bác sĩ--", new { @class = "form-control", @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Thông tin vào</h6>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Ngày", htmlAttributes: new { @class = "control-label" }):
                                    <input type="text" class="form-control" value="@Model.NGAY.Value.ToString("dd/MM/yyyy")" readonly />
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Giờ", htmlAttributes: new { @class = "control-label" }):
                                    <input type="text" class="form-control" value="@Model.GIO.Value.ToString(@"hh\:mm")" readonly />
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Mạch", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.MACH, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Thân nhiệt", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.THANNHIET, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Nhịp thở", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.NHIPTHO, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Chiều cao", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.CHIEUCAO, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Cân nặng", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.CANNANG, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="divider"></div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Mắt trái", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.MATTRAI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Mắt phải", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.MATPHAI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Nhãn áp T", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.NHANAPTRAI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Nhãn áp P", htmlAttributes: new { @class = "control-label" }):
                                    @Html.EditorFor(model => model.NHANAPPHAI, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Tiền sử bệnh", htmlAttributes: new { @class = "control-label" }):
                                    @Html.TextAreaFor(model => model.TIENSUBENH, new { @class = "form-control", @rows = 3, @readonly = true })
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Chẩn đoán lâm sàng", htmlAttributes: new { @class = "control-label" }):
                                    @Html.TextAreaFor(model => model.CHUANDOANLAMSANG, new { @class = "form-control", @rows = 3, @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mt-3 mb-2 text-primary">Thông tin ra</h6>
                            </div>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="form-group pe-none">
                                    @Html.Label("Chẩn đoán cuối cùng", htmlAttributes: new { @class = "control-label" }):
                                    @Html.TextAreaFor(model => model.CHUANDOANCUOICUNG, new { @class = "form-control", @rows = 3, @readonly = true })
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-right">
                                    <a href="@Url.Action("Index")" class="btn btn-light">Trở lại</a>
                                    <a href="@Url.Action("Edit", new { id = Model.MABA })" class="btn btn-primary">Chỉnh sửa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}