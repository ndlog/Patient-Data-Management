                     var errorMessage = "@TempData["SuccessAdmin"]";
                     if (successMessage) {
                         $('.toast').toast('show');
                         $('.toast').addClass('bg-success');
                         setTimeout(function () {
                             $('.toast').toast('hide');
                         }, 4000);
                     }
                     else if (errorMessage) {
                         $('.toast').toast('show');
                         $('.toast').addClass('bg-danger');
                         setTimeout(function () {
                             $('.toast').toast('hide');
                         }, 4000);
                     }
                 });
            </script>

            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </div>
